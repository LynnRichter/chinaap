<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!-- 顶部导航栏 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/color_topback" >

        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/pic_placehold"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bank_home_ico" />

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@drawable/color_white"
            android:textSize="18sp" />
    </RelativeLayout>
    <!-- 内部输入内容 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
			<!--品名  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp" >

                <TextView
                    android:id="@+id/detail_z1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_name"
                    android:layout_marginLeft="5dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/detail_z1"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price_button_start"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/main_price_start_bg"
                    android:gravity="center"
                    android:text="@string/price_addlist"
                    android:textColor="@drawable/color_white"
                    android:textSize="14sp" />
            </RelativeLayout>
            <!--别名  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_aliasname"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_aliasname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--规格  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_spec"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/provider_detail_mainp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--批发价-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_rprice"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_rprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--价格指数  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_priceIndex"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_priceIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <!-- 价格来源-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_marketShort"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_marketShort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--  报价日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_releaseDate"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_releaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>