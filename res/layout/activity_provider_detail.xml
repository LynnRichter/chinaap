<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶部导航栏 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/color_topback" >

        <ImageView
            android:id="@+id/provider_detail_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/pic_placehold"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bank_ico" />

        <TextView
            android:id="@+id/provider_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@drawable/color_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_white"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 主营商品 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/provider_item_main"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/provider_detail_mainp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 联系人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/color_grayback"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/provider_item_contact"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/provider_detail_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 公司电话 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/provider_item_phone"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/provider_detail_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_orange"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 公司地址 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_grayback"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/provider_item_address"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/provider_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 公司简介 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/color_grayback" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/provider_detail_intro"
                    android:textColor="@drawable/color_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/color_topback" />
            </RelativeLayout>

            <TextView
                android:id="@+id/provider_detail_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_white"
                android:textColor="@drawable/color_text"
                android:textSize="14sp"
                android:padding="5dp" />
            <!-- 服务承诺 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/color_grayback" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/provider_detail_promise"
                    android:textColor="@drawable/color_black"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/color_topback" />
            </RelativeLayout>
            <TextView
                android:id="@+id/provider_detail_promise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_white"
                android:textColor="@drawable/color_text"
                android:textSize="14sp"
                android:padding="5dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>