<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/price_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_color_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/item_price_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:textColor="@drawable/color_text"
        android:textSize="14sp" />

    <com.example.wegame.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item_price_name"
        android:focusable="false" >

        <com.example.wegame.LHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <com.example.wegame.InterceptScrollContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_price_spec"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price_rprice"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@drawable/color_textRed"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price_unit"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price_priceIndex"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textColor="@drawable/color_purple"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price_marketShort"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price_releaseDate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textColor="@drawable/color_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_price_list"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/main_price_start_bg"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="@string/price_addlist"
                    android:textColor="@drawable/color_white"
                    android:textSize="14sp" />
            </com.example.wegame.InterceptScrollContainer>
        </com.example.wegame.LHScrollView>
    </com.example.wegame.InterceptScrollContainer>

</RelativeLayout>