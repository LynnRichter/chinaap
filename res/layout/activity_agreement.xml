<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶部导航栏 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/color_topback" >

        <TextView
            android:id="@+id/agree_back"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/main_city_bg"
            android:gravity="center"
            android:text="@string/agree_agree"
            android:textColor="@drawable/color_white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/agree_title"
            android:textColor="@drawable/color_white"
            android:textSize="18sp" />
    </RelativeLayout>
    <WebView 
        android:id="@+id/agree_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_white"/>

</LinearLayout>