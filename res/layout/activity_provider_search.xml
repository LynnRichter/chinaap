<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶部导航栏 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/color_topback" >

        <ImageView
            android:id="@+id/provider_search_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/pic_placehold"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bank_ico" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/provider_search_title"
            android:textColor="@drawable/color_white"
            android:textSize="18sp" />

        
    </RelativeLayout>
	 <!-- 搜索框 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/color_grayback"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp" >

        <EditText
            android:id="@+id/provider_search_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_search_bg"
            android:hint="@string/provider_search_hint"
            android:paddingLeft="10dp" 
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/provider_search_start"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/search_nav_ico" />
    </RelativeLayout>
    <ListView
        android:id="@+id/provider_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_white"
        android:divider="@drawable/color_stroke"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>